# PostgreSQL (required). Use Neon, local Postgres, or Docker.
# Local: same Neon project or a separate dev branch; Production: Neon in Vercel env.
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DB?sslmode=require"

# NextAuth (required for JWT signing; use: openssl rand -base64 32)
# Use either NEXTAUTH_SECRET or AUTH_SECRET (no extra text like "BETTER_AUTH_SECRET=")
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (create at https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Optional: show "Feedback or questions? Email us" in the footer (your contact email)
CONTACT_EMAIL=""
