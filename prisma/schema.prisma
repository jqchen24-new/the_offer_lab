generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?   // for email/password sign-in (null for Google-only users)
  profession    String?   // e.g. data_science, software_engineering, product, design, other
  accounts      Account[]
  sessions      Session[]
  tasks         Task[]
  applications  Application[]
  tags          Tag[]
  sqlAttempts   SqlAttempt[]
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Tag {
  id     String   @id @default(cuid())
  name   String
  slug   String
  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks  TaskTag[]

  @@unique([userId, slug])
}

model Task {
  id              String    @id @default(cuid())
  title           String
  durationMinutes Int?
  scheduledAt     DateTime
  completedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags            TaskTag[]
}

model TaskTag {
  taskId String
  tagId  String
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([taskId, tagId])
}

model Application {
  id                 String    @id @default(cuid())
  company            String
  role               String
  status             String
  appliedAt          DateTime
  statusUpdatedAt    DateTime? // when status was last changed
  notes              String?
  jobUrl             String?
  nextStepOrDeadline String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  userId             String
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// SQL Practice (curated questions, per-user attempts)
model SqlQuestion {
  id               String     @id @default(cuid())
  slug             String     @unique
  title            String
  problemStatement String     // markdown
  schemaSql        String     // DDL
  seedSql          String     // INSERTs / extra DDL
  expectedResult   Json       // array of row objects for comparison
  difficulty       String?    // easy, medium, hard
  order            Int        @default(0)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  attempts         SqlAttempt[]
}

model SqlAttempt {
  id           String     @id @default(cuid())
  userId       String
  questionId   String
  submittedSql String
  passed       Boolean
  runResult    Json?      // optional rows for debugging
  aiFeedback   String?
  createdAt    DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  question     SqlQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([userId, questionId])
}
